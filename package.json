{
  "name": "bookify",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "yarn nodemon",
    "types:generate": "yarn gql-gen && yarn lint --fix",
    "start": "node dist/index.js",
    "lint": "tslint --project ./tsconfig.json",
    "spec": "tsc && yarn jest",
    "features": "cucumber-js features/ -f node_modules/cucumber-pretty --require-module ts-node/register --require 'features/steps/**/*.ts'",
    "db:start": "pg_ctl -D /usr/local/var/postgres start",
    "db:drop": "yarn ts-node ./node_modules/.bin/typeorm schema:drop",
    "db:migrate": "yarn ts-node ./node_modules/.bin/typeorm migration:run",
    "db:rollback": "yarn ts-node ./node_modules/.bin/typeorm migration:revert"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.4",
    "@types/faker": "^4.1.4",
    "@types/graphql": "^14.0.3",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.3.10",
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-client": "^2.4.8",
    "apollo-link-context": "^1.0.12",
    "apollo-link-http": "^1.5.9",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "cucumber-pretty": "^1.5.0",
    "faker": "^4.1.0",
    "graphql-code-generator": "^0.14.5",
    "graphql-codegen-time": "^0.15.1",
    "graphql-codegen-typescript-common": "^0.14.5",
    "graphql-codegen-typescript-resolvers": "^0.14.5",
    "graphql-codegen-typescript-server": "^0.14.5",
    "graphql-tag": "^2.10.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/uuid": "^3.4.4",
    "apollo-server-koa": "^2.2.6",
    "bcrypt": "^3.0.3",
    "graphql": "^14.0.2",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.9",
    "uuid": "^3.3.2"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  }
}
